# path: ops/ENV.stg.example
# Backend - Staging (values are examples/placeholders)

APP_ENV=stg
AWS_REGION=ap-northeast-2

# Django
SECRET_KEY=__set_me__
DEBUG=false

# Database (PostgreSQL)
DB_HOST=__stg_db_host__
DB_PORT=5432
DB_NAME=__stg_db_name__
DB_USER=__stg_db_user__
DB_PASSWORD=__stg_db_password__
DB_CONN_MAX_AGE=60

# Redis (TLS 권장: rediss://; 비TLS면 redis://)
REDIS_URL=rediss://__stg_redis_host__:6379/0

# CORS/CSRF/Session
ALLOWED_ORIGINS=https://app.example.com
CORS_ALLOWED_ORIGINS=https://app.example.com
CSRF_TRUSTED_ORIGINS=https://app.example.com
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Observability
LOG_LEVEL=INFO
SENTRY_DSN=
X_RAY_SAMPLING_RATE=0.1

# Rate limits (앱 레벨)
RATE_LIMIT_LOGIN_PER_MIN=30
RATE_LIMIT_POST_PER_MIN=10
RATE_LIMIT_GLOBAL_PER_5MIN=3000
